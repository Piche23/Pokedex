<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    android:padding="4dp">

    <ImageView
        android:id="@+id/pokedex_list_item_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:contentDescription="Pokemon picture"
        android:scaleType="centerInside" />

    <LinearLayout
        android:id="@+id/pokedex_list_item_types_container"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pokedex_list_item_type1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="Primary type logo"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/pokedex_list_item_type2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="Secondary type logo"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:scaleType="centerInside" />
    </LinearLayout>

    <TextView
        android:id="@+id/pokedex_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_toStartOf="@+id/pokedex_list_item_types_container"
        android:layout_toEndOf="@+id/pokedex_list_item_image"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="15sp" />
</RelativeLayout>
